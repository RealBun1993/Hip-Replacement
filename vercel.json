{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": { "runtime": "python@3.8" }
    },
    {
      "src": "static/index.html",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/generate_data.py"
    },
    {
      "src": "/(.*)",
      "dest": "/static/index.html"
    }
  ],
  "buildCommand": "pip install -r requirements.txt",
  "functions": {
    "api/*.py": {
      "runtime": "python@3.8"
    }
  }
}
