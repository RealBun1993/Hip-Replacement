{
  "version": 2,
  "builds": [
    { "src": "api/generate_data.py", "use": "@vercel/python" },
    { "src": "static/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/generate_data.py" },
    { "src": "/(.*)", "dest": "/static/index.html" }
  ],
  "build": {
    "env": {
      "VERCEL_PYTHON_VERSION": "3.12"
    },
    "scripts": {
      "build": "pip install --upgrade pip setuptools"
    }
  }
}
